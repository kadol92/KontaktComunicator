<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox fx:id="editContactPanel" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EditContactController">
   <children>
      <Label fx:id="contactName" text="NAZWA KONTAKTU" textAlignment="CENTER">
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="contactCity" text="Miejscowość: NAZWA_MIEJSCOWOŚCI">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <Label fx:id="contactNumber" layoutX="208.0" layoutY="57.0" text="Nr ID: NR_KONTAKTU">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <Label text="EDYTUJ NAZWĘ KONTAKTU">
         <VBox.margin>
            <Insets top="70.0" />
         </VBox.margin>
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="newContactNameFiled" maxWidth="200.0" promptText="Nowa nazwa kontaktu...">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </TextField>
      <Button fx:id="saveChangedContact" mnemonicParsing="false" onMouseClicked="#saveChangedContact" text="Zapisz zmiany">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
